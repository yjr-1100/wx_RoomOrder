.body {
  width: 80vw;
  margin: 15vw 10vw 10vw 10vw;
  background-color: rgba(255, 255, 255, 0.8);
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
  border-radius: 5vw;
  padding: 1rpx 5vw 5vw 5vw;
}
.body view {
  margin: 5vw 0 0 0;
}
.body view .title {
  margin: 0;
  font-size: 5.5vw;
  color: #472634;
}
.body view .inputarea {
  margin: 0;
  display: flex;
  padding: 1vw;
  flex-direction: row;
  align-items: center;
  border-radius: 5vw;
  height: 10vw;
}
.body view .inputarea text {
  color: #999999;
  margin-right: 2vw;
  font-size: 6vw;
  font-weight: 500;
}
.body view .inputarea .icon-wodexuanzhong {
  color: #ff0000;
}
.body view .inputarea .icon-huiyuanqia {
  color: #ff9e01;
}
.body view .inputarea .icon-banji1 {
  color: #0062ff;
}
.body view .inputarea .icon-shouji {
  color: #b619ff;
}
.body view .inputarea input {
  border-bottom: 1rpx solid #472634;
  padding-left: 1vw;
  font-size: 5vw;
}
.body view .inputarea .disedit {
  color: #888888;
}
button {
  background-color: #f54764;
  color: #fff;
  border-radius: 7vw;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 5.4vw;
  height: 14vw;
  width: 76vw!important;
  box-shadow: 0px 3px 14px rgba(255, 26, 64, 0.616);
}
button[disabled] {
  color: #999999 !important;
  background: #ecebea !important;
  border-color: #e6e6e6 !important;
  box-shadow: 0px 3px 14px rgba(49, 49, 49, 0.2);
}
.button-hover {
  background-color: #ff5370;
  color: #fff;
  box-shadow: 0px 3px 14px rgba(255, 26, 64, 0.616);
}
#imagemask {
  background-image: url('https://cdn.jsdelivr.net/gh/yjr-1100/Photobag/roomorderimage/loginbackground_classroom.jpg');
  background-size: 100% 100%;
}
#imagemask:after {
  -webkit-filter: blur(3px) brightness(50%);
  filter: blur(2px) brightness(70%);
  transform: scale(1.3);
  content: "";
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  background: inherit;
  z-index: -9998;
}
